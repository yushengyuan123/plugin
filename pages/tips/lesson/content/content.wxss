.top-bg-con {
    height: 200rpx;
    background-color: #467CFF;
}

.electron-class {
    width: 80%;
    background-color: white;
    box-shadow:0px 2px 5px -1px rgba(0,0,0,0.5);
    border-radius:6px;
    margin: -50rpx auto auto;
}

.item-con {
    height: 130rpx;
    padding: 30rpx 0 30rpx 0;
    display: flex;
    flex-direction: row;
    width: 90%;
    margin: auto;
    border-bottom: 1px solid rgba(216,216,216,1);
}

.index-con {
    height: 100%;
    width: 120rpx;
    margin-right: 20rpx;
    border: 1px solid #467CFF;
    line-height: 130rpx;
    color: #467CFF;
    text-align: center;
}

.content-con {
    height: 100%;
    width: calc(100% - 140rpx);
    font-size: 30rpx;
    overflow: scroll;
}
