/* pages/index/electricalApplicant/electricalApplicant.wxss */
/* pages/index/index.wxss */
page {
    margin: 0;
    padding: 0;
    background:rgba(250,250,250,1);
}

cover-view {
    margin: 0;
    padding: 0;
}

.page-container {
    position: fixed;
    width: 100%;
    height: 100%;
}
.page-container::after, .section-left::after, .section-right::after {
    content: '';
    display: block;
    clear: both;
}
.section-left {
    position: absolute;
    height: 100%;
    width: 248rpx;
    top: 0;
    right: 0;
    background: transparent;
}

.inner-container{
    position: absolute;
    right: 0;
    height: 100%;
    width: 198rpx;
    background-color: white;
    display: flex;
    flex-direction: column;
    /* align-content: center; */
    justify-content: center;
    z-index: 300;
}

.section-active {

}

.section-outer-normal {
    width: 50rpx;
}

.section-normal {
    width: 0;
}
.section-right {
    width: 100%;
    position: relative;
    flex: 1;
    overflow: hidden;
}
.port-index {
    width:88rpx;
    height:46rpx;
    margin: 26rpx 42rpx;
    font-size:32rpx;
    font-family:PingFangHK-Medium;
    font-weight:500;
    color:rgba(42,42,42,1);
    line-height:46rpx;
}
.port-status {
    width:110rpx;
    height:22rpx;
    margin: 16rpx 42rpx;
    font-size:22rpx;
    font-family:PingFangHK-Medium;
    font-weight:500;
    color:rgba(42,42,42,1);
    line-height:22rpx;
}
.port-container {
    display: flex;
    width: 100%;
    height: 128rpx;
}
.port-left {
    width: 10rpx;
    background-color: rgba(6,24,87,1);
}
.port-right {
    flex: 1;
}
.port-right>text {
    display: block;
}
.add-port {
    display: block;
    width: 56rpx;
    height: 56rpx;
    margin-top: 52rpx;
    margin-left: 72rpx;
}
.add-container {
    overflow: hidden;
    width: 100%;
}
.add-container>cover-view {
    display: block;
    width:100%;
    height:22rpx;
    font-size:27rpx;
    font-family:PingFangHK-Medium;
    font-weight:500;
    color:rgba(42,42,42,1);
    margin: 13rpx 54rpx 0;
    line-height:22rpx;
    color: #35B9F6;
    text-align: center;
}
.panel-arrow {
    position: absolute;
    background:rgba(255,255,255,1);
    box-shadow:-3px 2px 3px -3px rgba(0,0,0,0.75);
    border-left:1px solid rgba(216,214,214,1);
    border-top:1px solid rgba(216,214,214,1);
    border-bottom:1px solid rgba(216,214,214,1);
    display: flex;
    justify-content: center;
    align-items: center;
    top: 50%;
    width: 50rpx;
    height: 150rpx;
    z-index: 100;
}
.panel-arrow>cover-view {
    font-size: 30rpx;
    width: 22rpx;
    height: 22rpx;
    line-height: 22rpx;
}
.info-container {
    position: relative;
    width: 100%;
    height: 158rpx;
    background-color: #fff;
}
.info-container::after {
    content: "";
    display: block;
    clear: both;
}
.info-top {
    width: 100%;
}
.info-top>text {
    display: block;
    float: left;
    width:250rpx;
    height:40rpx;
    font-size:30rpx;
    font-family:PingFangHK-Medium;
    font-weight:500;
    color:rgba(42,42,42,1);
    line-height:40rpx;
    margin: 36rpx 40rpx;
    margin-bottom: 0;
}
.power-container {
    float: right;
    width: 86rpx;
    height: 40rpx;
    background-color:#1478F6;
    border-radius:28px;
    border:1px solid rgba(219,219,219,1);
    margin: 36rpx 32rpx 0;
}
.power-container>view {
    cursor: pointer;
    width:20px;
    height:20px;
    background:rgba(255,255,255,1);
    box-shadow:0px 2px 6px -2px rgba(0,0,0,0.5);
    border-radius: 50%;
    transition: transform .5s ease;
}
.power-bg-active {
    background-color: #1478F6;
}
.power-bg-normal {
    background-color: white;
}
.power-active {
    transform: translateX(46rpx);
}
.power-normal {
    transform: translateX(0rpx);
}
.port-name {
    width:120rpx;
    height:24rpx;
    font-size:24rpx;
    font-family:PingFangHK-Medium;
    font-weight:500;
    color:rgba(42,42,42,1);
    line-height:24rpx;
    margin-left: 40rpx;
    margin-top: 20rpx;
}
.set-up {
    width:96rpx;
    height:24rpx;
    font-size:24rpx;
    font-family:PingFangHK-Medium;
    font-weight:500;
    color:rgba(19,111,255,1);
    line-height:24rpx;
    margin-left: 32rpx;
    margin-top: 20rpx;
}
.info-bottom {
    width: 100%;
}
.info-bottom::after, .info-top::after {
    content: "";
    display: block;
    clear: both;
}
.info-bottom>text {
    display: block;
    float: left;
}
.ports {
    overflow: hidden;
    width: 100%;
}
.ports::after {
    content: "";
    clear: both;
    display: block;
}
.data-container {
    width: 92%;
    background-color: #fff;
    margin: 34rpx auto;
    overflow: hidden;
}
.data-container::after, .data-top::after, .search-container::after {
    content: '';
    display: block;
    clear: both;
}
.data-top {
    width: 100%;
}
.data-top > text {
    display: block;
    margin-top: 26rpx;
    margin-left:20rpx;
    margin-bottom: 24rpx;
    width:178rpx;
    height:40rpx;
    font-size:40rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(42,42,42,1);
    line-height:40rpx;
}
.search-container {
    width: 100%;
    border-top: 1px solid #D4D4D4;
    border-bottom: 1px solid #D4D4D4;
}
.search-container>view {
    float: left;
    height: 42rpx;
    line-height: 42rpx;
    font-size:24rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(42,42,42,1);
    text-align: center;
    margin-top: 22rpx;
    margin-bottom: 22rpx;
    padding: 0 20rpx 0 20rpx;
}
.search-container>text:nth-child(2) {
    border-left: 1px solid #D4D4D4;
    border-right: 1px solid #d4d4d4;
}
.port-active {
    background-color:rgba(6,24,87,1);
}
.port-normal {
    background-color: #fff;
}
.account-set {
    position: fixed;
    right: 28rpx;
    bottom: 44rpx;
    width: 76rpx;
    height: 76rpx;
    background:rgba(19,111,255,1);
    border-radius: 50%;
    z-index: 100;
}
.account-set>image {
    display: block;
    margin-top: 8rpx;
    margin-left: auto;
    margin-right: auto;
    width: 42rpx;
    height: 42rpx;
}
.account-set>text {
    display: block;
    margin: 0 auto;
    width:48rpx;
    height:12rpx;
    font-size:12rpx;
    font-family:PingFangHK-Medium;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:12rpx;
}
/* 浮出层样式↓ */

.picker-layer-container {
    position: fixed;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0,  .3);
}
.picker {
    background-color: #fff;
    width: 100%;
    height: 400rpx;
}
.choice-area {
    position: absolute;
    bottom: 0;
    height: 400rpx;
    width: 100%;
}

.indicator {
    height: 60rpx;
    border-top: 1px solid #389AFB;
    border-bottom: 1px solid #389AFB;
}

.column {
    font-size: 24rpx;
    line-height: 70rpx;
    color: #2C343C;
    text-align: center;
    /* line-height: 100rpx; */
}

.result {
    text-align: center;
    margin-top: 50px;
}

.button-container {
    position: absolute;
    z-index: 13;
    width: 100%;
    height: 60rpx;
    top: -50rpx;
    background-color: #fff;
}

.layer-button {
    position: absolute;
    width: 100rpx;
    height: 50rpx;
    font-size: 30rpx;
    line-height: 60rpx;
    text-align: center;
}

.button-right {
    right: 0rpx;
    color: #389AFB;
}

.button-left {
    left: 0rpx;
    color: #2C343C;
}

.add-layer {
    position: fixed;
    background-color: rgba(0, 0, 0, .3);
    width: 100%;
    height: 100%;
}
.add-layer>view {
    width: 80%;
    height: 250rpx;
    border-radius: 8px;
    background-color: #fff;
    box-shadow: 0 0 4px rgba(0, 0, 0, .3);
    margin: 250rpx auto;
    overflow: hidden;
}
.add-layer>view>text {
    display: block;
    width: 100%;
    margin-top: 15rpx;
    text-align: center;
}
.add-button-container {
    width: 100%;
    height: 50rpx;
}
.add-button-container>button {
    display: block;
    float: left;
    border-radius: 0;
    width: 50%;
}
.add-layer input {
    border-bottom: 1px solid #2C343C;
    width: 85%;
    height: 35rpx;
    margin: 20rpx auto;
}
.data-bottom {
    /* display: flex;
    justify-content: center; */
    width: 100%;
    height: 600rpx;
    overflow: hidden;
}

/* 浮出层样式↑ */

.layer-active {
    display: block;
}
.layer-normal {
    display: none;
}
