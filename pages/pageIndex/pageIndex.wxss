/* pages/pageIndex/pageIndex.wxss */
page {
  margin: 0;
  padding: 0;
}
view {
  margin: 0;
  padding: 0;
}
.body {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #389AFB;
}
/* 头部样式表 ↓ */
.header-container {
  position: relative;
  display: flex;
  flex-flow: row;
  width: 100%;
  height: 19%;
}
.header-container>view {
  position: relative;
}
.left-section {
  flex: 1;
  height: 100%;
  color: white;
}
.info-container {
  display: flex;
  width: 75%;
  height: 30%;
  margin-top: 10%;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
}
.socket {
  display: block;
  float: left;
  margin-right: 20rpx;
  font-size: 42rpx;
  letter-spacing: 0;
  text-align: center;
  line-height: 36rpx;
}
.name {
  float: left;
  display: block;
  font-size: 30rpx;
  padding: 10rpx;
  letter-spacing: 0;
  text-align: center;
  line-height: 24rpx;
  /* width: 100%; */
  /* background: #418AD2; */
}
.change-name {
  display: block;
  /* margin-left: 50rpx;  */
  padding-left: 20rpx;
  margin-top: 7rpx;
  width: 36rpx;
  height: 36rpx;
}
.status-container {
  width: 75%;
  height: 40%;
  margin: 0 auto;
}
.status-container>text {
  display: block;
  float: left;
}
.status {
  margin-left: 20rpx;
}
.right-section {
  display: flex;
  align-items: center;
  width: 200rpx;
  height: 100%;
}
.right-section>view {
  position: relative;
  width: 130rpx;
  height: 80rpx;
  border-radius: 24px;
  background-color: #fff;
}
.right-section>view>view {
  height: 100%;
  width: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 0 0 4px rgba(0, 0, 0, .5);
}
.switch-controll {
  transition: all .2s linear;
  transform: translateX(0);
}
.switch-controll-active {
  transform: translateX(50rpx);
}
.switch-active {
  background-color: #1B436B!important;
}
/* 头部样式表 ↑*/

/* 主要部分的样式 ↓ */

.main {
  position: relative;
  display: flex;
  flex-flow: column;
  width: 85%;
  height: 81%;
  margin: 0 auto;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  background-color: #fff;
  box-shadow: 0 0 4px rgba(0, 0, 0, .5);
}
.switch-mode-container {
  position: relative;
  width: 100%;
  height: 120rpx;
  overflow: hidden;
  font-size: 36rpx;
  color: #686868;
  border-top-left-radius: 12px;
  border-top-right-radius: 12px;
  background-color: #E7EAED;
}
.switch-mode-container>view {
  float: left;
  width: 50%;
  height: 90rpx;
  text-align: center;
  padding-top: 35rpx;
  background-color: #E7EAED;
  border-top-right-radius: 12px;
  border-top-left-radius: 12px;
}
.mode-choiced {
  background-color: #fff!important;
  color: #389AFB;
}
.data-show {
  position: relative;
  width: 100%;
  flex: 1;
}
.data-show>view {
  position: absolute;
  width: 100%;
  height: 100%;
}
.search-choice-container {
  position: relative;
  display: flex;
  align-items: center;
  width: 90%;
  height: 80rpx;
  text-align: center;
  background-color: #389AFB;
  margin: 60rpx auto;
  font-size: 28rpx;
  border-radius: 12rpx;
}
.search-choice-container>text {
  display: block;
  float: left;
  color: #fff;
  margin-left: 20rpx;
  /* margin-right: 20rpx; */
}
.search-choice-container>view {
  float: left;
  border-radius: 12rpx;
}
.search-choice-container>image {
  float: left;
}
.time-select {
  width: 170rpx;
  margin-left: 20rpx;
  background-color: #fff;
  text-align: center;
}
.choice-select {
  width: 160rpx;
  background-color: #fff;
  margin-left: 20rpx;
  /* margin-right: 20rpx; */
}
.choice-select>image {
  float: left;
  width: 24rpx;
  height: 24rpx;
}
.search-label {
  display: block;
  width: 24px;
  height: 24px;
  margin-left: 10rpx;
}
.predict-button {
  display: block;
  border-radius: 12rpx;
  background-color: #fff;
  color: #000!important;
  padding-left: 10rpx;
  padding-right: 10rpx;
  width: 140rpx;
}
/* 主要部分的样式 ↑ */

/* 浮出层样式↓ */

.picker-layer-container {
   position: fixed;
   height: 100%;
   width: 100%;
   background-color: rgba(0, 0, 0,  .3);
}
.picker {
  background-color: #fff;
  width: 100%;
  height: 400rpx;
}
.choice-area {
  position: absolute;
  bottom: 0;
  height: 400rpx;
  width: 100%;
}

.indicator {
  height: 60rpx;
  border-top: 1px solid #389AFB;
  border-bottom: 1px solid #389AFB;
}

.column {
  font-size: 24rpx;
  line-height: 70rpx;
  color: #2C343C;
  text-align: center;
  /* line-height: 100rpx; */
}

.result {
  text-align: center;
  margin-top: 50px;
}

.button-container {
  position: absolute;
  z-index: 13;
  width: 100%;
  height: 60rpx;
  top: -50rpx;
  background-color: #fff;
}

.layer-button {
  position: absolute;
  width: 100rpx;
  height: 50rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
}

.button-right {
  right: 0rpx;
  color: #389AFB;
}

.button-left {
  left: 0rpx;
  color: #2C343C;
}

/* 浮出层样式↑ */

/* 数据图表echarts样式 ↓ */

.current-switch-mode {
  display: block;
  width: 70%;
  margin: 45rpx auto;
  background-color: #389AFB;
  border-radius: 12rpx;
  color: #fff;
  font-size: 36rpx;
}
.echart-container, .current-echarts-container {
  width: 100%;
  height: 500rpx;
}
.isDisplay {
  display: block!important;
}
.isNone {
  display: none!important;
}
/* 数据图表echarts样式 ↑ */