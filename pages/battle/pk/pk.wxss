/* pages/battle/question/question.wxss */
.outer-con {
    min-height: 100vh;
    width: 100%;
    background:linear-gradient(180deg,rgba(115,78,233,1) 0%,rgba(121,97,219,1) 68%,rgba(121,95,242,1) 100%);
}
.top-bg-con {
    height: 185rpx;
    width: 100%;
    font-size: 30rpx;
    color: white;
    text-align: center;
    padding-top: 80rpx;
}

.top-bg-con text {
    text-align: center;
}

.head-con {
    width: 100%;
}

.head-image {
    height: 113rpx;
    width: 170rpx;
    margin: auto;
}

.bottom-con {
    min-height: 600rpx;
    position: relative;
    width: 90%;
    margin: auto;
    z-index: 100;
    background: rgba(255,255,255,0.1);
    border-radius: 10px;
    padding-bottom: 58rpx;
}

.head-image .icon {
    position: absolute;
    height: 200rpx;
    width: 200rpx;
    top: -100rpx;
    left: calc(50% - 100rpx);
    border-radius: 50%;
    background-color: #975AFF;
    color: white;
    font-size: 53rpx;
    overflow: hidden;
}

.user-name-con {
    position: relative;
    height: 50rpx;
    width: 100%;
    margin-top: 25rpx;
    margin-bottom: 30rpx;
    font-size: 35rpx;
    text-align: center;
    color: white;
}

.function-btn-con {
    width: 90%;
    margin: 30rpx auto auto;
}

.item-card {
    height: 100rpx;
    width: 80%;
    box-shadow:0px 4px 13px -5px rgba(0,0,0,0.5);
    border-radius:6px;
    line-height: 100rpx;
    text-align: center;
    font-size: 0;
    margin: 70rpx auto auto;
}

.item-card view {
    display: inline-block;
    vertical-align: top;
    height: 100%;
    font-size: 30rpx;
    letter-spacing: 10rpx;
}

.item-card image {
    display: inline-block;
    height: 50rpx;
    width: 50rpx;
    margin-top: 25rpx;
    margin-right: 20rpx;

}

.topic {
    min-height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    border-radius: 5px;
    color: #7960DC;
    text-align: center;
    margin: 30rpx auto auto;
    font-weight: bold;
}

.next-qus {
    position: absolute;
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    background-color: white;
    top: -50rpx;
    right: 11%;
}

.inner-circle {
    position: absolute;
    height: 90rpx;
    width: 90rpx;
    background-color: #975AFF;
    border-radius: 50%;
    top: 5rpx;
    left: 5rpx;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 60%;
}

.timu {
    border-radius: 5px;
    text-align: left;
    line-height: 60rpx;
    margin: 30rpx auto auto;
    color: white;
}

.answer {
    width: 85%;
    border-radius: 5px;
    text-align: left;
    line-height: 60rpx;
    margin: 30rpx auto auto;
    color: white;
}

.topic span {
    display: inline-block;
    font-size: 40rpx;
    margin-right: 20rpx;
    color: white;
}


.right {
    background-color: #57DB05;
    color: white;
}

.wrong {
    background-color: #FC3D38;
    color: white;
}

.normal {
    background-color: white;
    color: #975AFF;
}

.canvasView{
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: 50%;
    overflow: hidden;
}

.canvasView canvas {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
}

text{
    position: absolute;
}

.user-con {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 120rpx;
    width: 240rpx;
    position: absolute;
    left: 0;
    background-color: #74A3FF;
    top: 205rpx;
    border-radius: 0 30px 30px 0;
}

.user-person-right-con {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 120rpx;
    width: 240rpx;
    position: absolute;
    right: 0;
    background-color:#EB6D37;
    top: 205rpx;
    border-radius: 30px 0 0 30px;
}

.user-person-con {
    height: 100%;
    width: calc(100% - 120rpx)
}

.user-person-name, .user-person-score{
    white-space:nowrap;
    overflow: hidden;
    height: 60rpx;
    width: 100%;
    line-height: 60rpx;
    font-size: 28rpx;
    color: white;
    text-overflow:ellipsis;
}

.user-person-head-image {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 110rpx;
    width: 110rpx;
    border-radius: 50%;
    background-color: white;
}

.user-person-head-image image{
    display: block;
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    background-color: #FF4F24;
}
