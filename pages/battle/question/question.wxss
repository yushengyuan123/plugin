/* pages/battle/question/question.wxss */
.outer-con {
    min-height: 100vh;
    width: 100%;
    background:linear-gradient(180deg,rgba(115,78,233,1) 0%,rgba(121,97,219,1) 68%,rgba(121,95,242,1) 100%);
}
.top-bg-con {
    height: 265rpx;
    width: 100%;
}

.head-con {
    width: 100%;
}

.head-image {
    height: 113rpx;
    width: 170rpx;
    margin: auto;
}

.bottom-con {
    position: relative;
    width: 90%;
    margin: auto;
    z-index: 100;
    background: rgba(255,255,255,0.1);
    border-radius: 10px;
    padding-bottom: 58rpx;
}

.head-image .icon {
    position: absolute;
    height: 200rpx;
    width: 200rpx;
    top: -100rpx;
    left: calc(50% - 100rpx);
    border-radius: 50%;
    background-color: #975AFF;
    color: white;
    font-size: 53rpx;
    overflow: hidden;
}

.user-name-con {
    position: relative;
    height: 50rpx;
    width: 100%;
    margin-top: 25rpx;
    margin-bottom: 30rpx;
    font-size: 35rpx;
    text-align: center;
    color: white;
}

.function-btn-con {
    width: 90%;
    margin: 30rpx auto auto;
}

.item-card {
    height: 100rpx;
    width: 80%;
    box-shadow:0px 4px 13px -5px rgba(0,0,0,0.5);
    border-radius:6px;
    line-height: 100rpx;
    text-align: center;
    font-size: 0;
    margin: 70rpx auto auto;
}

.item-card view {
    display: inline-block;
    vertical-align: top;
    height: 100%;
    font-size: 30rpx;
    letter-spacing: 10rpx;
}

.item-card image {
    display: inline-block;
    height: 50rpx;
    width: 50rpx;
    margin-top: 25rpx;
    margin-right: 20rpx;

}

.topic {
    min-height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    border-radius: 5px;
    color: #7960DC;
    text-align: center;
    margin: 30rpx auto auto;
}

.next-qus {
    position: absolute;
    height: 100rpx;
    width: 100rpx;
    border-radius: 50%;
    background-color: white;
    top: -50rpx;
    right: 11%;
}

.inner-circle {
    position: absolute;
    height: 90rpx;
    width: 90rpx;
    background-color: #975AFF;
    border-radius: 50%;
    top: 5rpx;
    left: 5rpx;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 60%;
}

.timu {
    width: 100%;
    border-radius: 5px;
    text-align: left;
    line-height: 60rpx;
    margin: 30rpx auto auto;
    color: white;
}

.answer {
    width: 85%;
    border-radius: 5px;
    text-align: left;
    line-height: 60rpx;
    margin: 30rpx auto auto;
    color: white;
}

.explain {
    height: 60rpx;
    width: 100%;
    margin: 30rpx auto auto;
    color: yellow;
    text-align: right;
}


.explain view{
    height: 100%;
    display: inline-block;
    line-height: 60rpx;
    vertical-align: top;
}

.image {
    display: inline-block;
    height: 60rpx;
    width: 50rpx;
}

.topic span {
    display: inline-block;
    font-size: 40rpx;
    margin-right: 20rpx;
    color: white;
}


.right {
    background-color: #57DB05;
    color: white;
}

.wrong {
    background-color: #FC3D38;
    color: white;
}

.normal {
    background-color: white;
    color: #975AFF;
}

.canvasView{
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: 50%;
    overflow: hidden;
}

.canvasView canvas {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    overflow: hidden;
}

text{
    position: absolute;
}

.global-layer {
    position: fixed;
    display: flex;
    align-items: center;
    z-index: 100;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100%;
    background: rgb(0,0,0,0.5);
}

.show-more-con {
    position: absolute;
    height: 50vh;
    width: 80%;
    left: 10%;
    top: 20%;
    z-index: 1000;
    background-color: white;
    border-radius: 6px;
}

.number {
    height: 70rpx;
    line-height: 70rpx;
    width: 80%;
    border: 2px solid #467CFF;
    text-align: center;
    font-size: 28rpx;
    font-weight: bold;
    color: #467CFF;
    margin: 70rpx auto auto;
}

.cancel {
    position: absolute;
    right: 15rpx;
    top: 7rpx;
    height: 40rpx;
    width: 40rpx;
    color: #467CFF;
    font-size: 48rpx;
}

.show-more-content {
    height: 70%;
    width: 80%;
    margin: 40rpx auto auto;
}

.show-more-content cover-view {
    white-space: normal;
    height: 100%;
    width: 100%;
    overflow-y: scroll;
}

