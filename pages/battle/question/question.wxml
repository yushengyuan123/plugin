<!--pages/battle/question/question.wxml-->
<!--pages/battle/battle.wxml-->
<view class="outer-con">
    <view class="top-bg-con"></view>
    <view class="bottom-con">
        <view class="head-con">
            <view class="head-image">
                <view type="userAvatarUrl" class="icon"></view>
            </view>
            <view class="next-qus">
                <view class="inner-circle" src="../../../images/next.png"></view>
            </view>
            <view class="user-name-con">
                第{{currentIndex}}题
            </view>
        </view>
        <view class="function-btn-con">
            <view class="timu">{{questionList.question}}</view>
            <view class="topic" wx:if="{{focus=='A'}}"  data-id="A">{{questionList.answerA}}</view>
            <view class="topic {{correct=='A'?'right':'normal'}}"
                  data-id="A"
                  bindtap="chooseItem"
                  wx:else
            >
                {{questionList.answerA}}
            </view>
            <view class="topic {{correct=='B'?'right':'normal'}}"
                  data-id="B"
                  bindtap="chooseItem"
                  wx:if="{{focus == 'B'}}"
            >
                {{questionList.answerB}}
            </view>
            <view class="topic" wx:else="" data-id="B" >{{questionList.answerB}}</view>
            <view class="topic {{correct=='C'?'right':'normal'}}"
                  data-id="C"
                  bindtap="chooseItem"
                  wx:if="{{focus == 'C'}}"
            >
                {{questionList.answerC}}
            </view>
            <view class="topic" wx:else="" data-id="C" >{{questionList.answerC}}</view>
            <view class="topic {{correct=='D'?'right':'normal'}}"
                  data-id="D"
                  bindtap="chooseItem"
                  wx:if="{{focus == 'D'}}"
            >
                {{questionList.answerD}}
            </view>
            <view class="topic" wx:else="" data-id="D" >{{questionList.answerD}}</view>
            <view class="answer">正确答案: 打篮球</view>
            <view class="answer" style="margin-top: 0">解释：因为唱跳rap，打篮球。解释解释解释。</view>
        </view>
    </view>
</view>

