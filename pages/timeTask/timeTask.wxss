/* pages/timeTask/timeTask.wxss */
.title {
  display: block;
  width:160rpx;
  height:40rpx;
  margin-top: 36rpx;
  margin-left: 42rpx;
  margin-bottom: 30rpx;
  font-size:40rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(42,42,42,1);
  line-height:40rpx;
}
.power-container {
  float: right;
  margin: 50rpx 32rpx;
  width: 66rpx;
  height: 40rpx;
  background:rgba(6,24,87,1);
  border-radius:32rpx;
  margin-bottom: 0;
}
.power-container>view {
  cursor: pointer;
  width:20px;
  height:20px;
  background:rgba(255,255,255,1);
  border-radius: 50%;
  transition: transform .5s ease;
}
.power-active {
  transform: translateX(26rpx) translateY(-1rpx);
}
.power-normal {
  transform: translateX(0rpx)  translateY(-1rpx);
}
.power-bg-active {
  background-color: #2C343C!important;
}
.power-bg-normal {
  background-color: #d4d4d4!important;
}
.page-container {
  position: relative;
  display: block!important;
  width: 100%;
  height: 100%;
  overflow: auto;
}
.list {
  position: relative;
  border-bottom: 1rpx solid rgba(6,24,87,.1);
  width: 100%;
  height: 148rpx;
}
.section-left {
  position: relative;
  float: left;
  height: 148rpx;
  width: 80%;
}
.section-right {
  position: relative;
  width: 20%;
  float: left;
  height: 148rpx;
}
.time-container {
  width: 100%;
  height: 74rpx;
}
.info-container {
  width: 100%;
  height: 74rpx;
}
.time {
  display: block;
  margin-left: 40rpx;
  margin-top: 10rpx;
  font-size: 40rpx;
  color: #2a2a2a;
}
.port {
  float: left;
  margin-top: 10rpx;
  margin-left: 40rpx;
  font-size: 24rpx;
  color: #7a7a7a;
}
.info {
  float: left;
  margin-top: 10rpx;
  margin-left: 30rpx;
  color: #2a2a2a;
  font-size: 24rpx;
}

/* pages/option/option.wxss */
